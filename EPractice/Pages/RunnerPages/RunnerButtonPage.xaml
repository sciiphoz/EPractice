<Page x:Class="EPractice.Pages.RunnerPages.RunnerButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.RunnerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunnerButtonPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" FontSize="30" FontWeight="SemiBold" FontFamily="Sans" Margin="0 0 0 75">Меню бегуна</Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="MarathonRegButton" Width="350" Height="75" FontSize="24" Margin="0 0 40 0" FontFamily="Arial" FontStyle="Italic" Click="MarathonRegButton_Click">Регистрация на марафон</Button>
                <Button x:Name="MyResultsButton" Width="350" Height="75" FontSize="24" FontFamily="Arial" FontStyle="Italic" Click="MyResultsButton_Click">Мои результаты</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 50 0 0">
                <Button x:Name="ContactsButton" Width="350" Height="75" FontSize="24" Margin="0 0 40 0" FontFamily="Arial" FontStyle="Italic" Click="ContactsButton_Click">Контакты</Button>
                <Button x:Name="MySponsorsButton" Width="350" Height="75" FontSize="24" FontFamily="Arial" FontStyle="Italic" Click="MySponsorsButton_Click">Мои спонсоры</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
