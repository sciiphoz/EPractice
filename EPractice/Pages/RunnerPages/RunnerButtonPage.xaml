<Page x:Class="EPractice.Pages.RunnerPages.RunnerButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.RunnerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunnerButtonPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" FontFamily="Sans" Margin="0 0 0 45">Меню бегуна</Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="350" Height="50" FontSize="24" Margin="0 0 15 0" FontFamily="Arial" FontStyle="Italic">Регистрация на марафон</Button>
                <Button Width="350" Height="50" FontSize="24" FontFamily="Arial" FontStyle="Italic">Мои результаты</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
                <Button Width="350" Height="50" FontSize="24" Margin="0 0 15 0" FontFamily="Arial" FontStyle="Italic">Редактирование профиля</Button>
                <Button Width="350" Height="50" FontSize="24" FontFamily="Arial" FontStyle="Italic">Мои спонсоры</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 30 0 0">
                <Button Width="350" Height="50" FontSize="24" Margin="0 0 15 0" FontFamily="Arial" FontStyle="Italic">Контакты</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
