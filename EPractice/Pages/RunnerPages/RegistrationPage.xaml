<Page x:Class="EPractice.Pages.RunnerPages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.RunnerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Button x:Name="OldButton" HorizontalAlignment="Center" Width="280" Margin="20 20 20 15" Padding="0 20 0 20" BorderThickness="2" Background="#EBEBEB" Foreground="#505050" BorderBrush="#505050"
                    FontFamily="Arial" FontSize="16" FontStyle="Italic" Click="OldButton_Click">Я участвовал ранее</Button>
            <Button x:Name="NewButton" HorizontalAlignment="Center" Width="280" Margin="20 0 20 10" Padding="0 20 0 20" BorderThickness="2" Background="#EBEBEB" Foreground="#505050" BorderBrush="#505050"
                    FontFamily="Arial" FontSize="16" FontStyle="Italic">Я новый участник</Button>
            <Button x:Name="LoginButton" HorizontalAlignment="Right" Width="70" Padding="5" Margin="0 0 10 20"
                    FontFamily="Arial" FontSize="12" Click="LoginButton_Click">Login</Button>
        </StackPanel>
    </Grid>
</Page>
