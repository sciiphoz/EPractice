<Page x:Class="EPractice.Pages.InfoPages.InfoButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.InfoPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfoButtonPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label HorizontalAlignment="Center" Margin="0 0 0 25" FontSize="24" FontFamily="Sans" FontWeight="SemiBold">Подробная информация</Label>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 25 0">
                    <Button Width="250" Height="90" FontSize="20" Padding="5" FontStyle="Italic" FontWeight="SemiBold" FontFamily="Arial">Marathon Skills 2016</Button>
                    <Button Width="250" Height="90" FontSize="20" Padding="5" FontStyle="Italic" FontWeight="SemiBold" FontFamily="Arial" Margin="0 15 0 0">
                        <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Предыдущие результаты</TextBlock>
                    </Button>
                    <Button Width="250" Height="90" FontSize="20" Padding="5" FontStyle="Italic" FontWeight="SemiBold" FontFamily="Arial" Margin="0 15 0 0">BMI калькулятор</Button>
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Width="250" Height="90" FontSize="20" Padding="5" FontStyle="Italic" FontWeight="SemiBold" FontFamily="Arial">
                        <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Насколько долгий марафон</TextBlock>
                    </Button>
                    <Button Width="250" Height="90" FontSize="20" Padding="5" FontStyle="Italic" FontWeight="SemiBold" FontFamily="Arial" Margin="0 15 0 0">
                        <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Список благотворительных организаций</TextBlock>
                    </Button>
                    <Button Width="250" Height="90" FontSize="20" Padding="5" FontStyle="Italic" FontWeight="SemiBold" FontFamily="Arial" Margin="0 15 0 0">BMR калькулятор</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
