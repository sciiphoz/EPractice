<Page x:Class="EPractice.Pages.InfoPages.InfoButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.InfoPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfoButtonPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label HorizontalAlignment="Center" Margin="0 0 0 75" FontSize="24" FontFamily="Sans" FontWeight="SemiBold">Подробная информация</Label>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 40 0">
                    <Button x:Name="MarathonBtn" Width="350" Height="75" FontSize="24" Padding="5" FontStyle="Italic" FontFamily="Arial" Click="MarathonBtn_Click">Marathon Skills 2016</Button>
                    <Button x:Name="PastResultsBtn" Width="350" Height="75" FontSize="24" Padding="5" FontStyle="Italic" FontFamily="Arial" Margin="0 30 0 0" Click="PastResultsBtn_Click">
                        <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Предыдущие результаты</TextBlock>
                    </Button>
                    <Button x:Name="BMIButton" Width="350" Height="75" FontSize="24" Padding="5" FontStyle="Italic" FontFamily="Arial" Margin="0 30 0 0" Click="BMIButton_Click">BMI калькулятор</Button>
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="ComparisonBtn" Width="350" Height="75" FontSize="24" Padding="5" FontStyle="Italic" FontFamily="Arial" Click="ComparisonBtn_Click">
                        <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Насколько долгий марафон</TextBlock>
                    </Button>
                    <Button x:Name="OrgsListBtn" Width="350" Height="75" FontSize="24" Padding="5" FontStyle="Italic" FontFamily="Arial" Margin="0 30 0 0" Click="OrgsListBtn_Click">
                        <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Список благотворительных организаций</TextBlock>
                    </Button>
                    <Button x:Name="BMRButton" Width="350" Height="75" FontSize="24" Padding="5" FontStyle="Italic" FontFamily="Arial" Margin="0 30 0 0" Click="BMRButton_Click">BMR калькулятор</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
