<Page x:Class="EPractice.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 30">
                <Label FontSize="24">Login</Label>
                <TextBox Width="200" FontSize="24" Margin="50 0 0 0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontSize="24">Password</Label>
                <TextBox Width="200" FontSize="24" Margin="10 0 0 0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 75 0 0" HorizontalAlignment="Center">
                <Button FontSize="24" Width="100" Padding="5" Margin="0 0 30 0">Login</Button>
                <Button FontSize="24" Width="100" Padding="5">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
