<Page x:Class="EPractice.Pages.ControllerPages.ControllerButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.ControllerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControllerButtonPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" FontFamily="Sans" Margin="0 0 0 75">Меню координатора</Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="RunnersBtn" Width="350" Height="75" FontSize="24" Margin="0 0 45 0" FontFamily="Arial" FontStyle="Italic" Click="RunnersBtn_Click">Бегуны</Button>
                <Button x:Name="SponsorsBtn" Width="350" Height="75" FontSize="24" FontFamily="Arial" FontStyle="Italic" Click="SponsorsBtn_Click">Спонсоры</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
