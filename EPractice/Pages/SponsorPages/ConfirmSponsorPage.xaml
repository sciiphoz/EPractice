<Page x:Class="EPractice.Pages.SponsorPages.ConfirmSponsorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.SponsorPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmSponsorPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center"
                FontSize="30" FontWeight="Bold" FontFamily="Sans">Спасибо за вашу спонсорскую поддержку!</Label>
            <TextBlock HorizontalAlignment="Center" TextWrapping="WrapWithOverflow" TextAlignment="Center"
                       FontSize="26">Спасибо за поддержку бегуна в Marathon Skills 2016! Ваше пожертвование пойдет в его благотворительную организацию</TextBlock>
            <Label x:Name="RunnerTxt" HorizontalAlignment="Center"
                   FontSize="30">Иван Прудов (204) из Russia</Label>
            <Label x:Name="CharityTxt" HorizontalAlignment="Center"
                   FontSize="32">Фонд кошек</Label>
            <Label x:Name="MoneyTxt" HorizontalAlignment="Center"
                   FontSize="40" FontWeight="Bold">$50</Label>
            <Button HorizontalAlignment="Center"
                    FontSize="24" Padding="15 5" Margin="0 10 0 0" Click="Button_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
