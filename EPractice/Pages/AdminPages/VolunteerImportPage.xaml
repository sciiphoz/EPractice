<Page x:Class="EPractice.Pages.AdminPages.VolunteerImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VolunteerImportPage">

    <Grid>
        <StackPanel Margin="40">
            <!-- Заголовок формы -->
            <TextBlock
        Margin="0,0,0,20"
        HorizontalAlignment="Center"
        FontSize="20"
        FontWeight="Bold"
        Foreground="#241D70"
        Text="Загрузка волонтеров" />

            <!-- CSV файл -->
            <TextBlock
        Margin="0,0,0,5"
        FontSize="14"
        FontWeight="Bold"
        Foreground="#241D70"
        Text="CSV файл волонтеров:" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox
            x:Name="FilePathTextBox"
            Grid.Column="0"
            Height="40"
            Padding="10"
            FontSize="14"
            IsReadOnly="True" />

                <Button
            Grid.Column="1"
            Width="120"
            Height="40"
            Margin="10,0,0,0"
            Background="#00903E"
            Click="BrowseButton_Click"
            Content="Просмотр..."
            FontWeight="Bold"
            Foreground="White" />
            </Grid>

            <!-- Кнопки загрузки/отмены -->
            <StackPanel
        Margin="0,30,0,0"
        HorizontalAlignment="Center"
        Orientation="Horizontal">
                <Button
            Width="120"
            Height="40"
            Background="#00903E"
            Click="ImportButton_Click"
            Content="Загрузка"
            FontWeight="Bold"
            Foreground="White" />

                <Button
            Width="120"
            Height="40"
            Margin="20,0,0,0"
            Background="#FDC100"
            Click="CancelButton_Click"
            Content="Отмена"
            FontWeight="Bold"
            Foreground="Black" />
            </StackPanel>

            <TextBlock
        Margin="0,30,0,5"
        FontSize="14"
        FontWeight="Bold"
        Foreground="#241D70"
        Text="CSV файл должен иметь следующие поля:" />

            <StackPanel Margin="10">
                <!--<TextBlock Text="• Email: Адрес электронной почты волонтера" />-->
                <TextBlock Text="• FirstName: Имя волонтера" />
                <TextBlock Text="• LastName: Фамилия волонтера" />
                <TextBlock Text="• CountryCode: Код страны (3 символа)" />
                <TextBlock Text="• Gender: Пол (Мужской/Женский)" />
            </StackPanel>

            <!-- Лог загрузки -->
            <Border
        Margin="0,20,0,0"
        BorderThickness="1"
        BorderBrush="LightGray"
        CornerRadius="5"
        Padding="10"
        Visibility="Collapsed"
        x:Name="LogBorder">
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LogTextBlock" TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>

            <!-- Статистика -->
            <StackPanel Margin="0,10,0,0" Visibility="Collapsed" x:Name="StatsPanel">
                <TextBlock x:Name="StatsTextBlock" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
