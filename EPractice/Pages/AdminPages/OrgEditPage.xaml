<Page x:Class="EPractice.Pages.AdminPages.OrgEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EPractice.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrgEditPage">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#241D70"
            Text="Добавление/Редактирование благотворительных организаций" />

            <TextBlock
            Margin="0,10,0,5"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#241D70"
            Text="Наименование:" />

            <TextBox
            x:Name="NameTextBox"
            Height="40"
            Padding="10"
            FontSize="14"
            Text="{Binding CharityName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
            Margin="0,20,0,5"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#241D70"
            Text="Описание:" />

            <TextBox
            x:Name="DescriptionTextBox"
            Height="120"
            Padding="10"
            FontSize="14"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Auto"
            Text="{Binding CharityDescription, Mode=TwoWay}" />

            <TextBlock
            Margin="0,20,0,5"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#241D70"
            Text="Логотип файл:" />

            <TextBlock
            Margin="0,0,0,10"
            FontSize="12"
            FontStyle="Italic"
            Foreground="#241D70"
            Text="Оставьте поле 'Логотип файл' пустым, если вы не хотите загружать логотип" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox
            x:Name="LogoPathTextBox"
            Grid.Column="0"
            Height="40"
            Padding="10"
            FontSize="14"
            IsReadOnly="True"
            Text="{Binding NewLogoPath, Mode=OneWay}" />

                <Button
                    Grid.Column="1"
                    Width="120"
                    Height="40"
                    Margin="10,0,0,0"
                    Click="BrowseLogoButton_Click"
                    Content="Просмотр..."
                    FontWeight="Bold"
                    Foreground="White" />
            </Grid>

            <!-- Текущий логотип -->
            <TextBlock
        Margin="0,20,0,5"
        FontSize="14"
        FontWeight="Bold"
        Foreground="#241D70"
        Text="Текущий логотип:" />

            <Image
        x:Name="CurrentLogoImage"
        Width="120"
        Height="120"
        Stretch="Uniform"
        Source="{Binding CurrentLogoPath}" />

            <!-- Кнопки сохранения/отмены -->
            <StackPanel
        Margin="0,30,0,0"
        HorizontalAlignment="Center"
        Orientation="Horizontal">
                <Button
            Width="120"
            Height="40"
            Click="SaveButton_Click"
            Content="Сохранить"
            FontWeight="Bold"
            Foreground="White" />

                <Button
            Width="120"
            Height="40"
            Margin="20,0,0,0"
            Click="CancelButton_Click"
            Content="Отмена"
            FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
