<Window x:Class="EPractice.Windows.ContactsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPractice.Windows"
        mc:Ignorable="d"
        Title="ContactsWindow" Height="400" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" FontFamily="Arial" Margin="0 0 0 50">Контакты</Label>
            <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" FontFamily="Sans" FontWeight="Medium">Для получения дополнительной информации пожалуйста свяжитесь с координаторами</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                <Label FontSize="20" FontFamily="Sans" FontWeight="Bold">Телефон:</Label>
                <Label FontSize="20" FontFamily="Sans">+55 11 9988 7766</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                <Label FontSize="20" FontFamily="Sans" FontWeight="Bold">Email:</Label>
                <Label FontSize="20" FontFamily="Sans">coordinators@marathon.org</Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
