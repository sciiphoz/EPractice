<Window x:Class="EPractice.Windows.CharityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPractice.Windows"
        mc:Ignorable="d"
        Title="CharityWindow" Height="800" Width="400">
    <Grid>
        <TextBlock x:Name="FundNameTxt" Text="Информация о фонде"
           FontSize="24"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,20,0,0"/>

        <Button Content="❌"
        FontSize="18"
        Foreground="Red"
        Background="Transparent"
        BorderBrush="Transparent"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,10,10,0"
        Click="CloseButton_Click"/>

        <Ellipse x:Name="LogoEllipse" Stretch="Uniform" Width="100"
 Height="100"
 HorizontalAlignment="Center"
 VerticalAlignment="Top"
 Margin="0,55,0,0">
        </Ellipse>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              Margin="20,160,20,20">
            <TextBlock x:Name="FundInfoTxt" TextWrapping="WrapWithOverflow"
               FontSize="16"
               Margin="0,0,0,0">
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
